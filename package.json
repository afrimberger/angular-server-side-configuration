{
  "name": "angular-server-side-configuration",
  "version": "8.2.1",
  "description": "Configure an angular application on the server",
  "builders": "./builders/builders.json",
  "schematics": "./schematics/collection.json",
  "ng-update": {
    "migrations": "./schematics/migration.json"
  },
  "scripts": {
    "clean": "rimraf coverage dist {builders,models,schematics,src}/**/*.{d.ts,js} test/*.{d.ts,js} junit.xml",
    "build:node": "npm run clean && rollup -c rollup.config.js",
    "build:go": "docker-compose run build-go",
    "build": "run-p build:*",
    "pretest": "npm run clean",
    "test:node": "jest --ci",
    "test:go": "cd cli && go build && go test",
    "test": "run-s test:*",
    "lint": "tslint -p tsconfig.json",
    "release": "standard-version"
  },
  "main": "./src/main.js",
  "module": "./src/module.js",
  "typings": "./src/module.d.ts",
  "files": [
    "**/*.{js,d.ts,json}",
    "!*.spec.{d.ts,ts,js}",
    "!{test,cli,.git,.vscode}",
    "!{tsconfig,tslint,package-lock}.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyubisation/angular-server-side-configuration.git"
  },
  "keywords": [
    "angular",
    "configuration",
    "server",
    "server-side",
    "docker",
    "openshift",
    "kubernetes"
  ],
  "author": "kyubisation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kyubisation/angular-server-side-configuration/issues"
  },
  "homepage": "https://github.com/kyubisation/angular-server-side-configuration#readme",
  "devDependencies": {
    "@angular-devkit/architect": "~0.900.0-rc.11",
    "@angular-devkit/core": "^9.0.0-rc.11",
    "@angular-devkit/schematics": "^9.0.0-rc.11",
    "@schematics/angular": "^9.0.0-rc.11",
    "@types/glob-to-regexp": "^0.4.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^10.17.14",
    "@types/rimraf": "^2.0.3",
    "@wessberg/rollup-plugin-ts": "^1.2.15",
    "glob-to-regexp": "^0.4.1",
    "jest": "^24.9.0",
    "jest-junit": "^6.4.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.7.1",
    "rollup": "^1.30.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "standard-version": "^7.1.0",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "typescript": "~3.6.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "\\.spec\\.ts$",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!src/index.ts",
      "!**/*.spec.ts",
      "!test/minimal/**"
    ],
    "coverageReporters": [
      "cobertura",
      "html"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
