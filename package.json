{
  "name": "angular-server-side-configuration",
  "version": "11.0.1",
  "description": "Configure an angular application on the server",
  "builders": "./builders/builders.json",
  "schematics": "./schematics/collection.json",
  "ng-update": {
    "migrations": "./schematics/migration.json"
  },
  "scripts": {
    "clean": "rimraf coverage dist {builders,models,schematics,src}/**/*.{d.ts,js} test/*.{d.ts,js} junit.xml",
    "build:node": "npm run clean && rollup -c rollup.config.js",
    "build:go": "docker-compose run build-go",
    "build": "run-p build:*",
    "format": "prettier --write **/*.{js,ts,css,scss,json,md,html}",
    "pretest": "npm run clean",
    "test:node": "jest --ci",
    "test:go": "cd cli && go test",
    "test": "run-s test:*",
    "lint": "tslint -p tsconfig.json",
    "release": "standard-version"
  },
  "main": "./src/main.js",
  "module": "./src/module.js",
  "typings": "./src/module.d.ts",
  "files": [
    "**/*.{js,d.ts,json}",
    "!*.spec.{d.ts,ts,js}",
    "!{test,cli,.git,.vscode}",
    "!{tsconfig,tslint,package-lock}.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyubisation/angular-server-side-configuration.git"
  },
  "keywords": [
    "angular",
    "configuration",
    "server",
    "server-side",
    "docker",
    "openshift",
    "kubernetes"
  ],
  "author": "kyubisation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kyubisation/angular-server-side-configuration/issues"
  },
  "homepage": "https://github.com/kyubisation/angular-server-side-configuration#readme",
  "devDependencies": {
    "@angular-devkit/architect": "~0.1100.0",
    "@angular-devkit/core": "^11.0.0",
    "@angular-devkit/schematics": "^11.0.0",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@schematics/angular": "^11.0.0",
    "@types/glob-to-regexp": "^0.4.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/rimraf": "^3.0.0",
    "@wessberg/rollup-plugin-ts": "^1.3.8",
    "glob-to-regexp": "^0.4.1",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.1",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "~4.0.5"
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 100
  },
  "standard-version": {
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "package-lock.json",
        "type": "json"
      },
      {
        "filename": "schematics/migration.json",
        "updater": "scripts/standard-version-updater.js"
      },
      {
        "filename": "README.md",
        "updater": "scripts/standard-version-updater.js"
      }
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "\\.spec\\.ts$",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!src/index.ts",
      "!**/*.spec.ts",
      "!test/minimal/**"
    ],
    "coverageReporters": [
      "cobertura",
      "html"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
