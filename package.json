{
  "name": "angular-server-side-configuration",
  "version": "12.0.0",
  "description": "Configure an angular application on the server",
  "scripts": {
    "clean": "rimraf coverage dist {builders,models,schematics,src}/**/*.{d.ts,js} test/*.{d.ts,js} junit.xml",
    "build:node": "npm run clean && rollup -c rollup.config.js",
    "build:go": "docker-compose run build-go",
    "build": "run-p build:*",
    "format": "prettier --write **/*.{js,ts,css,scss,json,md,html}",
    "pretest": "npm run clean",
    "test:node": "jest --ci",
    "test:go": "cd cli && go test",
    "test": "run-s test:*",
    "lint": "tslint -p tsconfig.json",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyubisation/angular-server-side-configuration.git"
  },
  "keywords": [
    "angular",
    "configuration",
    "server",
    "server-side",
    "docker",
    "openshift",
    "kubernetes"
  ],
  "author": "kyubisation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kyubisation/angular-server-side-configuration/issues"
  },
  "homepage": "https://github.com/kyubisation/angular-server-side-configuration#readme",
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.0.0",
    "@angular/common": "~13.0.0",
    "@angular/compiler": "~13.0.0",
    "@angular/core": "~13.0.0",
    "@angular/forms": "~13.0.0",
    "@angular/platform-browser": "~13.0.0",
    "@angular/platform-browser-dynamic": "~13.0.0",
    "@angular/router": "~13.0.0",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.0.1",
    "@angular/cli": "~13.0.1",
    "@angular/compiler-cli": "~13.0.0",
    "@types/jasmine": "~3.10.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.0",
    "@types/rimraf": "^3.0.0",
    "esbuild": "^0.13.12",
    "jasmine-core": "~3.10.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "~4.4.3"
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 100
  },
  "standard-version": {
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "projects/angular-server-side-configuration/package.json",
        "type": "json"
      },
      {
        "filename": "projects/angular-server-side-configuration/schematics/migration.json",
        "updater": "scripts/standard-version-updater.js"
      },
      {
        "filename": "README.md",
        "updater": "scripts/standard-version-updater.js"
      }
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "\\.spec\\.ts$",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!src/index.ts",
      "!**/*.spec.ts",
      "!test/minimal/**"
    ],
    "coverageReporters": [
      "cobertura",
      "html"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
