{
  "name": "angular-server-side-configuration",
  "version": "8.0.0-beta.2",
  "description": "Configure an angular application on the server",
  "publishConfig": {
    "tag": "next"
  },
  "builders": "./builders/builders.json",
  "schematics": "./schematics/collection.json",
  "ng-update": {
    "migrations": "./schematics/migration.json"
  },
  "scripts": {
    "clean": "rimraf coverage dist {builders,models,schematics}/**/*.{d.ts,js} test/*.{d.ts,js} junit.xml",
    "build:node": "npm run clean && tsc && rollup -c rollup.config.js",
    "build:go": "docker-compose run build-go",
    "build": "run-p build:*",
    "pretest": "npm run clean",
    "test:node": "jest --ci",
    "test:go": "cd cli && go build && go test",
    "test": "run-s test:*",
    "lint": "tslint -p tsconfig.json"
  },
  "main": "./src/main.js",
  "module": "./src/module.js",
  "typings": "./src/index.d.ts",
  "files": [
    "**/*.{js,d.ts,json}",
    "!*.spec.{d.ts,ts,js}",
    "!{test,cli,.git,.vscode}",
    "!{tsconfig,tslint,package-lock}.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyubisation/angular-server-side-configuration.git"
  },
  "keywords": [
    "angular",
    "configuration",
    "server",
    "server-side",
    "docker",
    "openshift",
    "kubernetes"
  ],
  "author": "kyubisation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kyubisation/angular-server-side-configuration/issues"
  },
  "homepage": "https://github.com/kyubisation/angular-server-side-configuration#readme",
  "devDependencies": {
    "@angular-devkit/architect": "^0.800.0",
    "@angular-devkit/core": "^8.0.0",
    "@angular-devkit/schematics": "^8.0.0",
    "@schematics/angular": "^8.0.0",
    "@types/glob-to-regexp": "^0.4.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^10.14.4",
    "@types/rimraf": "^2.0.2",
    "glob-to-regexp": "^0.4.1",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.22.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "~3.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "\\.spec\\.ts$",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!src/index.ts",
      "!**/*.spec.ts"
    ],
    "coverageReporters": [
      "cobertura",
      "html"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
